{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run pre-commit",
            "type": "shell",
            "command": "uv",
            "args": ["run", "pre-commit", "run", "--all-files"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "never",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run main.py",
            "type": "shell",
            "command": "uv",
            "args": ["run", "main.py"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "Follow Logs",
            "type": "shell",
            "command": "tail",
            "args": ["-n", "20", "-F", "~/Library/Logs/Claude/mcp*.log"],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false
            },
            "problemMatcher": []
        }
    ]
}
